<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="411dp"
            android:layout_height="731dp" app:srcCompat="@drawable/tictactoe" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img11"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="39dp" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="206dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img21"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/img11" android:layout_marginTop="44dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img22"
            app:layout_constraintTop_toBottomOf="@+id/img12" android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/img21" android:layout_marginStart="36dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img23"
            app:layout_constraintTop_toBottomOf="@+id/img13"
            app:layout_constraintStart_toEndOf="@+id/img22" android:layout_marginTop="36dp"
            android:layout_marginStart="52dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img32"
            app:layout_constraintTop_toBottomOf="@+id/img22"
            app:layout_constraintStart_toEndOf="@+id/img31" android:layout_marginTop="48dp"
            android:layout_marginStart="36dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img33"
            app:layout_constraintTop_toBottomOf="@+id/img23"
            app:layout_constraintStart_toEndOf="@+id/img32"
            android:layout_marginTop="44dp" android:layout_marginStart="52dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img31"
            app:layout_constraintTop_toBottomOf="@+id/img21" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginTop="36dp" android:layout_marginStart="36dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img12"
            app:layout_constraintStart_toEndOf="@+id/img11"
            android:layout_marginStart="36dp" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="204dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" android:id="@+id/img13"
            app:layout_constraintStart_toEndOf="@+id/img12"
            android:layout_marginStart="44dp" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="204dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="RANDOMIZE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/randoButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp" android:visibility="invisible"/>
    <Button
            android:text="CLEAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resetButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Turn: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/turnText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
